{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start",
            "type": "shell",
            "linux": {
                "command": "nohup mvn -P debug package pre-integration-test | tee"
            },
            "osx": {
                "command": "nohup mvn -P debug package pre-integration-test | tee"
            },
            "windows": {
                "command": "mvn -P debug package pre-integration-test"
            },
            "isBackground": true,
            "problemMatcher": "$tsc-watch"
        },
        {
            "label": "Stop",
            "type": "shell",
            "linux": {
                "command": "PROCESS_ID=$(cat target/piranha/tmp/piranha.pid) ; kill -9 $PROCESS_ID"
            },
            "osx": {
                "command": "PROCESS_ID=$(cat target/piranha/tmp/piranha.pid) ; kill -9 $PROCESS_ID"
            }
        }
    ]
}
